{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/action/Build.0.0",
  "type": "object",
  "title": "Build action",
  "properties": {
    "Identifier": {
      "type": "string",
      "const": "aws/build@v1"
    },
    "Configuration": {
      "type": "object",
      "title": "BuildConfiguration",
      "additionalProperties": false,
      "required": ["Steps"],
      "properties": {
        "Container": {
          "description": "The container to run the build",
          "type": "object",
          "title": "BuildContainer",
          "additionalProperties": false,
          "properties": {
            "Image": {
              "description": "Image to run in the container",
              "type": "string",
              "title": "BuildImage"
            },
            "Registry": {
              "description": "Source of the Image",
              "type": "string",
              "title": "BuildRegistry"
            }
          }
        },
        "Steps": {
          "description": "Commands for the build action",
          "items": {
            "additionalProperties": false,
            "description": "Command for the build action",
            "properties": {
              "Run": {
                "description": "Command string",
                "type": "string"
              }
            },
            "type": "object",
            "title": "BuildStep"
          },
          "maxItems": 256,
          "minItems": 0,
          "type": "array",
          "title": "BuildSteps"
        }
      }
    },
    "DependsOn": {
      "$ref": "../interfaces/DependsOn.json"
    },
    "Environment": {
      "$ref": "../interfaces/Environment.json"
    },
    "Compute": {
      "$ref": "../interfaces/Compute.json"
    },
    "Timeout": {
      "$ref": "../interfaces/Timeout.json"
    },
    "Caching": {
      "title": "BuildActionCaching",
      "type": "object",
      "properties": {
        "FileCaching": {
          "$ref": "../interfaces/FileCaching.json"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "Packages": {
      "$ref": "../interfaces/Packages.json"
    },
    "Outputs": {
      "type": "object",
      "properties": {
        "OutputVariables": {
          "$ref": "../interfaces/OutputVariables.json"
        },
        "AutoDiscoverReports": {
          "$ref": "../interfaces/AutoDiscoverReports.json"
        },
        "Reports": {
          "$ref": "../interfaces/Reports.json"
        },
        "OutputArtifacts": {
          "$ref": "../interfaces/OutputArtifacts.json"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "Inputs": {
      "type": "object",
      "properties": {
        "InputArtifacts": {
          "$ref": "../interfaces/InputArtifacts.json"
        },
        "InputSources": {
          "$ref": "../interfaces/InputSources.json"
        },
        "InputVariables": {
          "$ref": "../interfaces/InputVariables.json"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    }
  },
  "required": ["Configuration", "Identifier"],
  "additionalProperties": false
}
